extends layout.pug

block content
  h1 #{movie.name}
  p Description: #{movie.description}
  p Year: #{movie.year}
  p Genres: #{movie.genres.join(', ')}
  p Rating: #{movie.rating}
  if user && user._id.toString() === movie.userId.toString()
    a(href=`/movies/${movie._id}/edit`) Edit
    form(method='POST', action=`/movies/${movie._id}/delete?_method=DELETE`, style='display:inline;')
      button(type='submit', onclick='return confirm("Are you sure you want to delete this movie?")') Delete
  a(href='/movies') Back to Movies